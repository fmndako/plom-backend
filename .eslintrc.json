{
  "env": {
      "node": true,
      "commonjs": true,
      "es6": true,
      "jest": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018
  },
  "rules": {
      "indent": [
          "error",
          4
      ],
      "no-var": "error",
      "linebreak-style": [
          "warn",
          "unix"
      ],
      "quotes": [
          "warn",
          "single"
      ],
      "semi": [
          "warn",
          "always"
      ],
      "eqeqeq":[
          "error",
          "always"

      ],
      "camelcase": [
          "warn",
          {
              "properties": "always"
            }
      ],
      "func-names": "warn",
      "func-style": [
        "off",
        "expression"
      ],
      "no-unused-vars": [
          "warn",
          {
            "vars": "all",
            "args": "none",
            "ignoreRestSiblings": true
          }
        ]
  }
}